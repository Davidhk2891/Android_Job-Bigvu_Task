<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bigvu_light_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/header_title_layout"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/bigvu_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/header_title_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bigvu_logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/header_title_text"
            android:textStyle="bold"
            android:textColor="@color/bigvu_purple"
            android:text="@string/trainer"
            android:layout_marginStart="@dimen/bigvu_8"
            android:textSize="@dimen/bigvu_text_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/header_dynamic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="@dimen/bigvu_8"
        android:textSize="@dimen/bigvu_text_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>