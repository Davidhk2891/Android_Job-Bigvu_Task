<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/workshop_dets_item_imageView"
        android:layout_width="@dimen/bigvu_60"
        android:layout_height="@dimen/bigvu_60"
        android:layout_marginTop="@dimen/bigvu_16"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/workshop_dets_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/workshop_dets_item_imageView"
        app:layout_constraintStart_toStartOf="@id/workshop_dets_item_imageView"
        app:layout_constraintEnd_toEndOf="@id/workshop_dets_item_imageView"
        android:layout_marginTop="@dimen/bigvu_14"
        android:text="@string/author"
        android:textStyle="bold"
        android:textSize="@dimen/bigvu_text_18"/>

    <TextView
        android:id="@+id/workshop_dets_item_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/workshop_dets_item_author"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_2"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="@dimen/bigvu_20"
        android:textSize="@dimen/bigvu_text_24"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/lorem_ipsum_short"/>

    <TextView
        android:id="@+id/workshop_dets_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/workshop_dets_item_desc"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
        app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_2"
        android:layout_marginTop="@dimen/bigvu_22"
        android:layout_marginBottom="@dimen/bigvu_10"
        android:textSize="@dimen/bigvu_text_14"
        android:lineSpacingMultiplier="1.4"
        android:text="@string/lorem_ipsum_long"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

</androidx.constraintlayout.widget.ConstraintLayout>